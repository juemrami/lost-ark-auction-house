// npx prisma migrate dev - does a migration to the db
//  --skip-seed
// npx prisma generate - generate a prisma client from db
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model item {
  id            Int          @id @unique @default(autoincrement())
  name          String       @unique
  bundle_size   Int          @default(1)
  price_history price_data[]
}

model price_data {
  data_id       String    @id @default(cuid())
  item          item      @relation(fields: [item_name], references: [name])
  item_name     String
  avg_day_price Decimal?
  recent_price  Decimal?
  lowest_price  Decimal?
  lowest_rem    Int?
  date_time     DateTime?
}
